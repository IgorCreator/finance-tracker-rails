<div class="row">
  <div class="col-9">
    <table class="table table-bordered table-hover">
      <thead>
      <tr>
        <th scope="col">Email</th>
        <th scope="col">Full Name</th>
        <th scope="col">Action</th>
      </tr>
      </thead>
      <tbody>
      <% @friends.each do |friend| %>
        <tr>
          <th scope="row"><%= friend.email %></th>
          <td><%= friend.full_name %></td>
          <td>
            <%= link_to 'View Portfolio', user_path(friend), class: "btn btn-info" %>
            <%= link_to 'Stop following', friendship_path(friend), method: :delete,
                        data: {confirm: "Do you want stop track #{friend.full_name}"},
                        class: "btn btn-warning" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
